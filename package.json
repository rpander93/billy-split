{
  "name": "billy-split",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "panda codegen",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "database:migrate": "node database/migrate.js",
    "database:codegen": "kysely-codegen --out-file database/generated.ts --dialect sqlite --url ./billy-split.db",
    "lint": "biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write ./app",
    "start": "cross-env NODE_OPTIONS='--import ./instrumentation.server.mjs' remix-serve ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "@remix-run/node": "^2.17.2",
    "@remix-run/react": "^2.17.2",
    "@remix-run/serve": "^2.17.2",
    "@sentry/remix": "^8.55.0",
    "@sentry/vite-plugin": "^2.23.1",
    "better-sqlite3": "^11.10.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "isbot": "^4.4.0",
    "kysely": "^0.27.6",
    "motion": "^11.18.2",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-call": "^1.8.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@pandacss/dev": "^0.47.1",
    "@remix-run/dev": "^2.17.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "dotenv": "^16.6.1",
    "kysely-codegen": "^0.19.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@sentry/cli",
      "better-sqlite3",
      "esbuild"
    ]
  }
}
